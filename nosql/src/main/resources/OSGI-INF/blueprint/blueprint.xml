<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
	default-activation="lazy">
	<bean id="CassandraCustomers" class="net.trajano.nosql.internal.CassandraCustomers">
		<argument>
			<reference interface="me.prettyprint.hector.api.Keyspace" />
		</argument>
	</bean>
	<bean id="MongoDbCustomers" class="net.trajano.nosql.internal.MongoDbCustomers">
		<argument>
			<reference interface="com.mongodb.DB" />
		</argument>
	</bean>
	<service ref="CassandraCustomers" interface="net.trajano.nosql.Customers">
		<service-properties>
			<entry key="engine" value="me.prettyprint.hector.api.Keyspace" />
		</service-properties>
	</service>
	<service ref="MongoDbCustomers" interface="net.trajano.nosql.Customers">
		<service-properties>
			<entry key="engine" value="com.mongodb.DB" />
		</service-properties>
	</service>
</blueprint>
