<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
	default-activation="lazy">
	<bean id="ServiceUserBean" class="net.trajano.blueprint.consumer.internal.ServiceUserBean"
		scope="singleton">
		<argument>
			<reference interface="java.util.concurrent.Executor" />
		</argument>
		<argument>
			<reference interface="net.trajano.hello.osgi.IHello" />
		</argument>
		<argument>
			<reference interface="org.springframework.data.mongodb.MongoDbFactory" />
		</argument>
		<argument>
			<reference interface="java.util.concurrent.BlockingQueue" />
		</argument>
	</bean>
	<service ref="ServiceUserBean" interface="net.trajano.blueprint.consumer.IServiceUser"
		activation="eager" />
</blueprint>
