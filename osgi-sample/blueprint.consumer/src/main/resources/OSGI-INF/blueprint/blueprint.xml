<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
	default-activation="eager">
	<bean id="ServiceUserBean" class="net.trajano.blueprint.consumer.internal.ServiceUserBean">
		<argument>
			<reference interface="java.util.concurrent.Executor" />
		</argument>
		<argument>
			<reference interface="net.trajano.hello.osgi.IHello" />
		</argument>
		<argument>
			<reference interface="org.springframework.data.mongodb.MongoDbFactory" />
		</argument>
		<argument>
			<reference interface="java.util.concurrent.BlockingQueue" />
		</argument>
	</bean>
	<service ref="ServiceUserBean">
		<interfaces>
			<value>net.trajano.blueprint.consumer.IServiceUser</value>
			<value>org.osgi.service.cm.ManagedService</value>
		</interfaces>
		<service-properties>
			<entry key="service.pid" value="net.trajano.blueprint.consumer" />
		</service-properties>
	</service>
</blueprint>
