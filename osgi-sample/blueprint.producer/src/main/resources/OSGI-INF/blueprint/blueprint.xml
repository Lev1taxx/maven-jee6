<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
	default-activation="lazy">
	<bean id="Hazelcast" class="com.hazelcast.core.Hazelcast"
		factory-method="getDefaultInstance" destroy-method="shutdown" />
	<bean id="ClusteredExecutor" factory-ref="Hazelcast"
		factory-method="getExecutorService" />
	<bean id="ClusteredQueue" factory-ref="Hazelcast" factory-method="getQueue">
		<argument value="SampleQueue" />
	</bean>
	<bean id="MongoDbFactory"
		class="org.springframework.data.mongodb.core.SimpleMongoDbFactory">
		<argument>
			<bean class="com.mongodb.Mongo" />
		</argument>
		<argument value="database" type="java.lang.String" />
	</bean>
	<service ref="ClusteredExecutor" interface="java.util.concurrent.Executor" />
	<service ref="ClusteredQueue" interface="java.util.concurrent.BlockingQueue" />
	<service ref="MongoDbFactory" interface="org.springframework.data.mongodb.MongoDbFactory" />
</blueprint>
