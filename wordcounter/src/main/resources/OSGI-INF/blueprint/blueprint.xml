<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
	<service interface="net.trajano.servicebus.master.ActorProvider">
		<bean
			class="net.trajano.servicebus.wordcounter.internal.WordCounterActorProvider" />
	</service>
	<service interface="net.trajano.servicebus.master.ActorProvider">
		<bean
			class="net.trajano.servicebus.wordcounter.internal.MultiWordCounterActorProvider">
			<argument ref="AkkaActorServiceBus" />
		</bean>
	</service>
	<reference id="AkkaActorServiceBus"
		interface="net.trajano.servicebus.master.AkkaActorServiceBus" />
</blueprint>
